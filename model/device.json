{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://autohome.ca/model/device.json",
    "title": "Device",
    "description": "Devices",
    "type": "object",
    "exegesis-plugin-jsonschema-controller": "Device",
    "exegesis-plugin-jsonschema-id": "id",
    "required": [ "name" ],
    "properties": {
        "id": { "type": "string", "readOnly": true },
        "name": { "type": "string" },
        "type": { "type": "string" },
        "direction": { "type": "string", "enum": [ "input", "output", "in/out" ] },
        "threshold": { "type": "number" },
        "calibrate": { "type": "number" },
        "changes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "device": { "type": "string" },
                    "direction": { "type": "string", "enum": [ "increase", "decrease", "none" ] },
                    "data": { "type": "object" }
                },
                "required": [ "device", "direction" ],
                "additionalProperties": false
            }
        },
        "interface": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "address": { "type": "string" },
                "config": { "type": "object" }
            },
            "required": [ "type", "address" ],
            "additionalProperties": false
        },
        "current": {
            "readOnly": true,
            "type": "object",
            "properties": {
                "time": { "type": "string", "format": "date-time" },
                "value": {
                    "type": "object",
                    "properties": {
                        "value": { "type": "number" },
                        "unit": { "type": "string" }
                    }
                },
                "data": { "type": "object" }
            },
            "additionalProperties": false
        },
        "target": {
            "readOnly": true,
            "type": "object",
            "properties": {
                "until": { "type": "string", "format": "date-time" },
                "value": {
                    "type": "object",
                    "properties": {
                        "value": { "type": "number" },
                        "unit": { "type": "string" }
                    }
                },
                "data": { "type": "object" }
            },
            "additionalProperties": false
        },
        "zone": { "$ref": "zone.json#/properties/id" },
    },
    "operations": {
        "addSensorReading": {
            "summary": "Add a new sensor reading",
            "operationId": "addSensorReading",
            "schema": {
                "type": "object",
                "properties": {
                    "time": { "type": "string", "format": "date-time" },
                    "type": { "type": "string" },
                    "value": {
                        "type": "object",
                        "properties": {
                            "value": { "type": "number" },
                            "unit": { "type": "string" }
                        },
                        "required": [ "value" ],
                        "additionalProperties": false
                    },
                    "target": {
                        "type": "object",
                        "properties": {
                            "value": { "type": "number" },
                            "unit": { "type": "string" }
                        },
                        "required": [ "value" ],
                        "additionalProperties": false
                    },
                    "data": { "type": "object" }
                },
                "required": [ "value" ],
                "additionalProperties": false
            },
            "responses": {
                "200": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "success": { "type": "boolean" }
                                }
                            }
                        }
                    }
                }
            }
        },
        "querySensorReadings": {
            "summary": "Query sensor readings from the given time range",
            "operationId": "querySensorReadings",
            "schema": {
                "type": "object",
                "properties": {
                    "start": { "type": "string", "format": "date-time" },
                    "end": { "type": "string", "format": "date-time" },
                    "type": { "type": "string" }
                },
                "required": [ "start", "end" ]
            },
            "responses": {
                "200": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "readings": {
                                        "type": "array",
                                        "items": {
                                            "type": "object",
                                            "properties": {
                                                "type": { "type": "string" },
                                                "home": { "type": "string" },
                                                "zone": { "type": "string" },
                                                "sensor": { "type": "string" },
                                                "fields": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object",
                                                        "properties": {
                                                            "time": { "type": "string", "format": "date-time" },
                                                            "value": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "value": { "type": "number" },
                                                                    "unit": { "type": "string" }
                                                                }
                                                            },
                                                            "target": {
                                                                "type": "object",
                                                                "properties": {
                                                                    "value": { "type": "number" },
                                                                    "unit": { "type": "string" }
                                                                }
                                                            }
                                                        },
                                                        "data": { "type": "object" }
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
